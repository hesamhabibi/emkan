{%-if seo_settings.google_site_verification.value_web-%}
<meta name="google-site-verification" content="{{seo_settings.google_site_verification.value_web}}">
{%-endif-%}

<link rel="alternate" type="application/atom+xml" title="{{lang}} RSS" href="/feed">

<meta name="mobile-web-app-capable" content="yes">

{%-if seo.canonical_url-%}
<link rel="canonical" href="{{seo.canonical_url}}" />
{%-endif-%}